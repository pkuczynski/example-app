{
    "extends": "../tsconfig.json",

    // Compiler Options
    "compilerOptions": {
        "outDir": "../build/web",

        "target": "es6",
        "jsx": "react",
        "lib": [
            "dom",
            "es2016",
            "es2017.intl",
            "es2018.intl",
            "es2019"
        ],

        // Source Maps
        "inlineSources": true,
        "sourceRoot": "/",

        // Module Resolution
        "module": "esnext",
    },

    // TypeScript Node
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
